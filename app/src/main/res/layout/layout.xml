<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:soulwolf="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/mi_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/colorPrimary"/>

    <net.soulwolf.widget.materialradio.MaterialRadioGroup
        android:id="@+id/material_radio_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <net.soulwolf.widget.materialradio.MaterialRadioButton
            android:id="@+id/material_radio_button_a"
            android:layout_width="50dp"
            android:layout_height="50dp"
            soulwolf:mcAnimator="true"
            soulwolf:mcTextColor="@drawable/radio_button_text_selector"
            android:textAlignment="center"
            soulwolf:mcButton="@drawable/letter_radio_button">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A"
                android:textSize="24sp"
                android:textColor="@color/black"
                android:layout_gravity="center" />
        </net.soulwolf.widget.materialradio.MaterialRadioButton>

        <net.soulwolf.widget.materialradio.MaterialRadioButton
            android:id="@+id/material_radio_button_b"
            android:layout_width="50dp"
            android:layout_height="50dp"
            soulwolf:mcAnimator="true"
            soulwolf:mcTextColor="@drawable/radio_button_text_selector"
            soulwolf:mcButton="@drawable/letter_radio_button">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="B"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:layout_gravity="center" />
        </net.soulwolf.widget.materialradio.MaterialRadioButton>
        <net.soulwolf.widget.materialradio.MaterialRadioButton
            android:id="@+id/material_radio_button_c"
            android:layout_width="50dp"
            android:layout_height="50dp"
            soulwolf:mcAnimator="true"
            soulwolf:mcTextColor="@drawable/radio_button_text_selector"
            soulwolf:mcButton="@drawable/letter_radio_button">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="C"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:layout_gravity="center" />
        </net.soulwolf.widget.materialradio.MaterialRadioButton>
        <net.soulwolf.widget.materialradio.MaterialRadioButton
            android:id="@+id/material_radio_button_d"
            android:layout_width="50dp"
            android:layout_height="50dp"
            soulwolf:mcAnimator="true"
            soulwolf:mcTextColor="@drawable/radio_button_text_selector"
            soulwolf:mcButton="@drawable/letter_radio_button">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="D"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:layout_gravity="center" />
        </net.soulwolf.widget.materialradio.MaterialRadioButton>

    </net.soulwolf.widget.materialradio.MaterialRadioGroup>

    <com.serchinastico.coolswitch.CoolSwitch
        android:id="@+id/cool_switch_foo"
        android:layout_height="35dp"
        android:layout_width="60dp"/>
</LinearLayout>