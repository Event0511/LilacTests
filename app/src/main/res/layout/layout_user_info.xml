<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorPrimary">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBar_user_info"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="?attr/colorPrimary">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar_user_info"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:contentScrim="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            >
            <ImageView
                android:id="@+id/header_background"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                app:layout_collapseMode="parallax"/>

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar_user_info"
                android:layout_width="match_parent"
                android:layout_height="?android:attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:layout_collapseMode="pin"/>


        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/header_floating_button"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="25dp"
        android:theme="@style/TransparentButton"
        app:fabSize="mini"
        app:elevation="10dp"
        app:pressedTranslationZ="14dp"
        app:layout_anchor="@id/appBar_user_info"
        app:layout_anchorGravity="bottom|end"/>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nested_scroll_view_user_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/colorBackground"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/account"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="bottom|start"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:text="Event0511@gmail.com"
                android:textColor="?attr/textColor"
                android:textSize="14sp"
                android:layout_marginRight="50dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="姓名:"
                android:textSize="14sp"
                android:textColor="?attr/textColor"
                android:layout_gravity="bottom|start"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:id="@+id/Name"
                android:layout_marginRight="50dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="bottom|start"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:text="院系:"
                android:textSize="14sp"
                android:textColor="?attr/textColor"
                android:id="@+id/faculty"
                android:layout_marginRight="50dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="bottom|start"
                android:text="生日:"
                android:id="@+id/birthday"
                android:textSize="14sp"
                android:textColor="?attr/textColor"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="50dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/gender"
                android:text="性别:"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:textSize="14sp"
                android:textColor="?attr/textColor"
                android:layout_marginRight="50dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/frequentCourse"
                android:text="擅长科目:"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:textColor="?attr/textColor"
                android:textSize="14sp"
                android:layout_marginRight="50dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/signature"
                android:text="个人签名:"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:textSize="14sp"
                android:textColor="?attr/textColor"
                android:layout_marginRight="50dp"/>
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

